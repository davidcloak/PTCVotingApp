<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CAA9E3"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".vote_page">




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Voting"
        android:textAlignment="center"
        android:layout_marginBottom="50dp"
        android:textSize="35sp"
        android:layout_weight="50"/>


<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="100">

    <ImageView
        android:id="@+id/image1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="59dp"
        tools:layout_editor_absoluteY="161dp"
        tools:srcCompat="@tools:sample/avatars"
        android:layout_weight="50" />

    <RadioButton
        android:id="@+id/vote1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vote"
        android:textSize="35dp"
        tools:layout_editor_absoluteX="244dp"
        tools:layout_editor_absoluteY="200dp"
        android:layout_weight="50"/>
</LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/description1"
        android:text="Description1"
        android:textSize="35dp"/>

<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_marginTop="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/candidates1"
        android:text="Candidates1"
        android:textSize="35dp"
        android:layout_marginRight="100dp" />

    <TextView
        android:id="@+id/party1"
        android:layout_width="177dp"
        android:layout_height="wrap_content"
        android:text="Party1"
        android:textSize="35dp" />

</LinearLayout>

<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_marginTop="20dp">

    <ImageView
        android:id="@+id/image2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="59dp"
        tools:layout_editor_absoluteY="419dp"
        tools:srcCompat="@tools:sample/avatars"
        android:layout_weight="50"/>

    <RadioButton
        android:id="@+id/vote2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vote"
        android:textSize="35dp"
        tools:layout_editor_absoluteX="244dp"
        tools:layout_editor_absoluteY="200dp"
        android:layout_weight="50"/>
</LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/description2"
        android:text="Description2"
        android:textSize="35dp"/>

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="100"
    android:layout_marginTop="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/candidates2"
        android:text="Candidates2"
        android:textSize="35dp"
        android:layout_marginRight="100dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/party2"
        android:text="party2"
        android:textSize="35dp" />

</LinearLayout>

    <Button
        android:id="@+id/voteSubmit"
        android:layout_width="117dp"
        android:layout_height="73dp"
        android:layout_marginTop="30dp"
        android:text="Submit"/>

</LinearLayout>